<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Chỉnh sửa địa chỉ</h4>
        </div>
        <div class="card-body p-4">
          <form action="/users/addresses/<%= address._id %>?_method=PUT" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="fullName" class="form-label">Họ tên người nhận *</label>
              <input type="text" class="form-control" id="fullName" name="fullName" required value="<%= address.fullName %>">
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Số điện thoại *</label>
              <input type="tel" class="form-control" id="phone" name="phone" required value="<%= address.phone %>">
            </div>
            <div class="mb-3">
              <label for="street" class="form-label">Địa chỉ chi tiết *</label>
              <input type="text" class="form-control" id="street" name="street" required value="<%= address.street %>">
            </div>
            <div class="mb-3">
              <label for="ward" class="form-label">Phường/Xã</label>
              <input type="text" class="form-control" id="ward" name="ward" value="<%= address.ward %>">
            </div>
            <div class="mb-3">
              <label for="district" class="form-label">Quận/Huyện *</label>
              <input type="text" class="form-control" id="district" name="district" required value="<%= address.district %>">
            </div>
            <div class="mb-3">
              <label for="city" class="form-label">Tỉnh/Thành phố *</label>
              <input type="text" class="form-control" id="city" name="city" required value="<%= address.city %>">
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="isDefault" name="isDefault" <%= address.isDefault ? 'checked' : '' %>>
              <label class="form-check-label" for="isDefault">
                Đặt làm địa chỉ mặc định
              </label>
            </div>
            <div class="d-flex justify-content-end">
              <a href="/users/addresses" class="btn btn-secondary me-2">Hủy</a>
              <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div> 