<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
  <div class="card-header bg-gradient-primary text-white py-3">
    <h5 class="mb-0 fw-bold"><i class="fas fa-user-circle me-2"></i>Tài khoản của tôi</h5>
  </div>
  <div class="card-body p-0">
    <div class="list-group list-group-flush border-0">
      <a href="/users/profile" class="list-group-item list-group-item-action border-0 py-3 ps-4 <%= active === 'profile' ? 'active-link' : '' %>">
        <i class="fas fa-user me-2"></i> Thông tin tài khoản
      </a>
      <a href="/users/orders" class="list-group-item list-group-item-action border-0 py-3 ps-4 <%= active === 'orders' ? 'active-link' : '' %>">
        <i class="fas fa-shopping-bag me-2"></i> Đơn hàng của tôi
      </a>
      <a href="/users/addresses" class="list-group-item list-group-item-action border-0 py-3 ps-4 <%= active === 'addresses' ? 'active-link' : '' %>">
        <i class="fas fa-map-marker-alt me-2"></i> Địa chỉ giao hàng
      </a>
      <a href="/users/wishlist" class="list-group-item list-group-item-action border-0 py-3 ps-4 <%= active === 'wishlist' ? 'active-link' : '' %>">
        <i class="fas fa-heart me-2"></i> Sản phẩm yêu thích
      </a>
      <a href="/users/change-password" class="list-group-item list-group-item-action border-0 py-3 ps-4 <%= active === 'change-password' ? 'active-link' : '' %>">
        <i class="fas fa-key me-2"></i> Đổi mật khẩu
      </a>
      <a href="/users/logout" class="list-group-item list-group-item-action border-0 py-3 ps-4 text-danger">
        <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
      </a>
    </div>
  </div>
</div>

<style>
  .bg-gradient-primary {
    background: linear-gradient(to right, var(--primary-dark), var(--primary-color));
  }
  
  .list-group-item-action {
    transition: all var(--transition-fast);
    position: relative;
  }
  
  .list-group-item-action:hover {
    background-color: var(--primary-light);
    color: var(--primary-color);
    transform: translateX(5px);
  }
  
  .active-link {
    color: var(--primary-color) !important;
    background-color: var(--primary-light);
    font-weight: 600;
  }
  
  .active-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
  }
</style> 