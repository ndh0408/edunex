<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <% if (locals.messages && messages.error) { %>
        <div class="alert alert-danger">
          <%= messages.error %>
        </div>
      <% } %>
      
      <% if (locals.messages && messages.success_msg) { %>
        <div class="alert alert-success">
          <%= messages.success_msg %>
        </div>
      <% } %>
      
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h4 class="text-center mb-0">Quên mật khẩu</h4>
        </div>
        <div class="card-body p-4">
          <p class="text-muted mb-4">Nhập địa chỉ email của bạn. Chúng tôi sẽ gửi một liên kết để đặt lại mật khẩu.</p>
          
          <form action="/users/forgot-password" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">Gửi liên kết đặt lại</button>
              <a href="/users/login" class="btn btn-light">Quay lại đăng nhập</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 