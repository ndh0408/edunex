<div class="container py-5">
  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <h4 class="mb-0">Giỏ hàng của bạn</h4>
        </div>
        <div class="card-body">
          <% if (cart && cart.items && cart.items.length > 0) { %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% cart.items.forEach((item, index) => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if (item.image) { %>
                            <img src="/uploads/<%= item.image %>" alt="<%= item.name %>" style="width: 80px; height: 80px; object-fit: cover;" class="me-3 border">
                          <% } else { %>
                            <div style="width: 80px; height: 80px;" class="me-3 border d-flex align-items-center justify-content-center bg-light">
                              <i class="fas fa-image text-muted"></i>
                            </div>
                          <% } %>
                          <div>
                            <h6 class="mb-1"><a href="/products/<%= item.slug %>" class="text-decoration-none text-dark"><%= item.name %></a></h6>
                            <% if (item.size || item.color) { %>
                              <div class="small text-muted">
                                <% if (item.color) { %>Màu: <%= item.color %><% } %>
                                <% if (item.color && item.size) { %>, <% } %>
                                <% if (item.size) { %>Kích thước: <%= item.size %><% } %>
                              </div>
                            <% } %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <% if (item.discountPrice && item.discountPrice > 0 && item.discountPrice < item.price) { %>
                          <span class="text-danger"><%= item.discountPrice.toLocaleString('vi-VN') %> ₫</span>
                          <br>
                          <small class="text-decoration-line-through text-muted"><%= item.price.toLocaleString('vi-VN') %> ₫</small>
                        <% } else { %>
                          <span><%= item.price.toLocaleString('vi-VN') %> ₫</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          <a href="/cart/update/<%= index %>?quantity=<%= Math.max(1, item.quantity - 1) %>" class="btn btn-outline-secondary">
                            <i class="fas fa-minus"></i>
                          </a>
                          <span class="mx-2 fw-medium"><%= item.quantity %></span>
                          <a href="/cart/update/<%= index %>?quantity=<%= Math.min(item.stock, item.quantity + 1) %>" class="btn btn-outline-secondary">
                            <i class="fas fa-plus"></i>
                          </a>
                        </div>
                      </td>
                      <td class="fw-bold">
                        <% const itemPrice = item.discountPrice && item.discountPrice > 0 && item.discountPrice < item.price ? item.discountPrice : item.price; %>
                        <%= (itemPrice * item.quantity).toLocaleString('vi-VN') %> ₫
                      </td>
                      <td>
                        <form action="/cart/remove/<%= index %>" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
              <a href="/products" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
              </a>
              <form action="/cart/clear" method="POST">
                <button type="submit" class="btn btn-outline-danger">
                  <i class="fas fa-trash me-2"></i>Xóa giỏ hàng
                </button>
              </form>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
              <h5>Giỏ hàng trống</h5>
              <p class="text-muted">Hiện chưa có sản phẩm nào trong giỏ hàng của bạn.</p>
              <a href="/products" class="btn btn-primary mt-3">Mua sắm ngay</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="col-lg-4">
      <!-- Order Summary -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Tóm tắt đơn hàng</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <span>Tạm tính:</span>
            <span class="fw-medium">
              <%= totalPrice.toLocaleString('vi-VN') %> ₫
            </span>
          </div>
          
          <div class="d-flex justify-content-between mb-3">
            <span>Phí vận chuyển:</span>
            <span class="fw-medium">
              0 ₫
            </span>
          </div>
          
          <% if (discount && discount > 0) { %>
            <div class="d-flex justify-content-between mb-3">
              <span>Giảm giá:</span>
              <span class="fw-medium text-danger">
                -<%= discount.toLocaleString('vi-VN') %> ₫
              </span>
            </div>
          <% } %>
          
          <hr>
          
          <div class="d-flex justify-content-between mb-3">
            <span class="fw-bold">Tổng cộng:</span>
            <span class="fw-bold fs-5 text-danger">
              <%= finalPrice.toLocaleString('vi-VN') %> ₫
            </span>
          </div>
          
          <% if (cart && cart.items && cart.items.length > 0) { %>
            <a href="/orders/checkout" class="btn btn-primary w-100">
              Tiến hành thanh toán
            </a>
          <% } else { %>
            <button class="btn btn-primary w-100" disabled>
              Tiến hành thanh toán
            </button>
          <% } %>
        </div>
      </div>
      
      <!-- Coupon Code -->
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">Mã giảm giá</h5>
        </div>
        <div class="card-body">
          <form action="/cart/coupon" method="POST" id="coupon-form">
            <div class="input-group">
              <input type="text" class="form-control" name="couponCode" placeholder="Nhập mã giảm giá" value="<%= couponCode || '' %>">
              <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
            </div>
            <% if (couponError) { %>
              <div class="text-danger small mt-2"><%= couponError %></div>
            <% } %>
            <% if (couponSuccess) { %>
              <div class="text-success small mt-2"><%= couponSuccess %></div>
            <% } %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Xử lý nút tăng số lượng
    const increaseBtns = document.querySelectorAll('.js-increase-qty');
    increaseBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const form = this.closest('form');
        const input = form.querySelector('input[name="quantity"]');
        const max = parseInt(input.getAttribute('max'));
        let value = parseInt(input.value);
        
        if (value < max) {
          value += 1;
          input.value = value;
          form.submit();
        }
      });
    });
    
    // Xử lý nút giảm số lượng
    const decreaseBtns = document.querySelectorAll('.js-decrease-qty');
    decreaseBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const form = this.closest('form');
        const input = form.querySelector('input[name="quantity"]');
        let value = parseInt(input.value);
        
        if (value > 1) {
          value -= 1;
          input.value = value;
          form.submit();
        }
      });
    });
  });
</script> 